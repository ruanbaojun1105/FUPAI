<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        
        <item android:state_pressed="false"  android:drawable="@color/littlebule">

　　<!-- 定义当button 不处于pressed 状态时的形态。-->

　　<shape>


　　<stroke android:width="1dp" android:color="#00f" />

　　<corners android:radius="1dp" />

　<padding android:left="10dp" android:top="10dp"
android:bottom="10dp" android:right="10dp">
</padding>

　　</shape>

　　</item>

        
　　<item android:state_pressed="true">

　　<!-- 定义当button 处于pressed 状态时的形态。-->

　　<shape>

　　<gradient android:startColor="#8600ff" />

　　<stroke android:width="2dp" android:color="#000000" />

　　<corners android:radius="1dp" />

　<padding android:left="10dp" android:top="10dp"
android:bottom="10dp" android:right="10dp">
</padding>

　　</shape>

　　</item>

　　<item android:state_focused="true">

　　<!-- 定义当button获得focus时的形态-->

　　<shape>

　　<gradient android:startColor="#6699cc" />

　　<stroke android:width="1dp" android:color="#333333" />

　　<corners android:radius="2dp" />

　　<padding android:left="10dp" android:top="10dp"
android:bottom="10dp" android:right="10dp">
</padding>

　　</shape>

　　</item>

　　</selector>
    

